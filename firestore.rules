rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    // Predictions:
    // - Public read (for history/stats if needed, or restricting to own)
    // - Write only by admin or server-side (server bypasses rules usually)
    // - For client-side saves: must be auth'd and matching uid
    match /predictions/{predId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // Default: deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
